# Production Environment Configuration
NODE_ENV=production

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-meet?retryWrites=true&w=majority

# JWT Secret (generate a strong random string)
JWT_SECRET=generate-a-64-character-random-string-here

# Server Configuration
PORT=5000

# Client URL (your deployed frontend URL)
CLIENT_URL=https://your-frontend-domain.com

# Email Configuration (Gmail with App Password or SendGrid)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-char-app-password

# Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Redis (Redis Cloud)
REDIS_HOST=redis-12345.c1.us-east-1-2.ec2.cloud.redislabs.com
REDIS_PORT=12345
REDIS_PASSWORD=your-redis-password

# WebRTC TURN Server (REQUIRED - get from metered.ca)
TURN_SERVER_URL=turn:global.relay.metered.ca:443
TURN_USERNAME=your-metered-username
TURN_CREDENTIAL=your-metered-credential
